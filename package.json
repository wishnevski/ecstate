{
  "name": "ECState",
  "description": "Fastest lightweight ECS (Entity Component System) framework working on archetypes (SOA) for JS applications and games.",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Mike Wishnevski (mike.wishnevski@gmail.com)",

  "keywords": ["ecs", "entity", "component", "system", "archetype", "soa", "dod", "data oriented", "design", "game", "dev", "gamedev", "3D", "2D", "application", "three", "babylon", "webgl", "render"],
  "repository": "github:wishnevski/ecstate",

  "main": "/build/ecstate.module.js",
  "type": "module",

  "devDependencies": {
    "mocha": "^8.1.3",
  	"rollup": "^2.28.1",
    "rollup-plugin-terser": "^7.0.2"
  },

  "scripts": {
    "watch-es": "rollup src/ECState.js --file build/ecstate.module.js --format es --watch",
    "build-es": "rollup src/ECState.js --file build/ecstate.module.js --format es --plugin 'rollup-plugin-terser={compress:false,mangle:false}'",

    "watch-umd": "rollup src/ECState.js --file build/ecstate.umd.js --format umd --name 'ECState' --watch",
    "build-umd": "rollup src/ECState.js --file build/ecstate.umd.js --format umd --name 'ECState' --plugin 'rollup-plugin-terser={compress:false,mangle:false}'"
  }
}